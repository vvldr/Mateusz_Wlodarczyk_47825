using System;

namespace Zad_3_b
{
    class MainClass
    {
        public static void Main(string[] args)
        {
            Console.WriteLine("Wpisz liczbe nr 1");
            int liczba_x = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Wpisz liczbe nr 2");
            int liczba_y = Convert.ToInt32(Console.ReadLine());

            Console.WriteLine("Wprowadz znak '+' dla dodawania, '-' dla odejmowania, '*' dla mnożenia");
            char znak = Console.ReadLine()[0];


            switch (znak)
            {
                case '+':

                    // dod
                    Console.WriteLine(liczba_x + liczba_y);
                    break;

                case '-':

                    Console.WriteLine(liczba_x - liczba_y);
                    // od
                    break;

                case '*':

                    Console.WriteLine(liczba_x * liczba_y);
                    break;

                default:
                    // brak
                    Console.WriteLine("Brak możliwości obsługi takiego znaku!");
                    break;
            }
        }
    }
}
