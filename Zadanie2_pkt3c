using System;

namespace Zadanie3c
{
    class MainClass
    {
        public static void Main(string[] args)
        {
            Console.WriteLine("Wpisz liczbe nr 1");
            int liczba_x = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Wpisz liczbe nr 2");
            int liczba_y = Convert.ToInt32(Console.ReadLine());

            Console.WriteLine("Wprowadz znak '+' dla dodawania, '-' dla odejmowania, '*' dla mnożenia lub '/' dla dzielenia");
            char znak = Console.ReadLine()[0];


            switch (znak)
            {
                case '+':

                    // dod
                    Console.WriteLine(liczba_x + liczba_y);
                    break;

                case '-':

                    Console.WriteLine(liczba_x - liczba_y);
                    // od
                    break;

                case '*':

                    Console.WriteLine(liczba_x * liczba_y);
                    break;

                case '/':

                    if(liczba_j == 0 || liczba_d == 0)
                    {
                        Console.WriteLine("Nie można dzielić przez 0, sprobuj ponownie!");
                    }
                    else
                    Console.WriteLine(liczba_x / liczba_y);
                    break;

                default:
                    // brak
                    Console.WriteLine("Nie obsługuję takiego znaku!");
                    break;
            }
        }
    }
}
